<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/spacing_medial_24"
    android:paddingStart="@dimen/spacing_normal_16"
    android:paddingEnd="@dimen/spacing_normal_16"
    android:paddingBottom="@dimen/spacing_small_8"
    android:background="@drawable/nav_head_bg"
    tools:ignore="contentDescription">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/color_accent"
        android:layout_marginTop="@dimen/spacing_normal_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sevoro_sv_gmail_com"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif"/>
    </LinearLayout>
</RelativeLayout>