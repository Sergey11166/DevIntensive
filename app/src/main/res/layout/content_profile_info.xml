<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            style="@style/match_parent_all"
                                            android:id="@+id/profile_info_nested_scroll_view"
                                            app:layout_behavior=".ui.view.behaviors.ProfileInfoNestedScrollViewBehavior"
                                            app:layout_anchor="@+id/scores_layout"
                                            tools:ignore="contentDescription">

    <LinearLayout
        style="@style/match_parent_all"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <LinearLayout style="@style/main_item_layout">

            <ImageView
                style="@style/main_icon.left"
                android:src="@drawable/ic_call_black_24dp"/>

            <android.support.design.widget.TextInputLayout
                style="@style/main_text_input_layout">

                <EditText
                    style="@style/main_edit_text"
                    android:id="@+id/phone_edit_text"
                    android:inputType="phone"
                    android:hint="@string/profile.info.phone"/>
            </android.support.design.widget.TextInputLayout>

            <ImageView
                style="@style/main_icon.right"
                android:src="@drawable/ic_phone_in_talk_black_24dp"/>
        </LinearLayout>

        <View style="@style/line.horizontal.main"/>

        <LinearLayout style="@style/main_item_layout">

            <ImageView
                style="@style/main_icon.left"
                android:src="@drawable/ic_email_black_24dp"
                android:layout_height="wrap_content"/>

            <android.support.design.widget.TextInputLayout
                style="@style/main_text_input_layout">

                <EditText
                    style="@style/main_edit_text"
                    android:id="@+id/email_edit_text"
                    android:inputType="textEmailAddress"
                    android:hint="@string/profile.info.email"/>
            </android.support.design.widget.TextInputLayout>

            <ImageView
                style="@style/main_icon.right"
                android:src="@drawable/ic_send_black_24dp"/>
        </LinearLayout>

        <View style="@style/line.horizontal.main"/>

        <LinearLayout style="@style/main_item_layout">

            <ImageView
                style="@style/main_icon.left"
                android:src="@drawable/ic_vk_circle"/>

            <android.support.design.widget.TextInputLayout
                style="@style/main_text_input_layout">

                <EditText
                    style="@style/main_edit_text"
                    android:id="@+id/vk_edit_text"
                    android:inputType="textUri|textMultiLine"
                    android:hint="@string/profile.info.vk"/>
            </android.support.design.widget.TextInputLayout>

            <ImageView
                style="@style/main_icon.right"
                android:src="@drawable/ic_visibility_black_24dp"/>
        </LinearLayout>

        <View style="@style/line.horizontal.main"/>

        <LinearLayout style="@style/main_item_layout">

            <ImageView
                style="@style/main_icon.left"
                android:src="@drawable/ic_github_circle"/>

            <android.support.design.widget.TextInputLayout
                style="@style/main_text_input_layout">

                <EditText
                    style="@style/main_edit_text"
                    android:id="@+id/git_edit_text"
                    android:inputType="textMultiLine"
                    android:hint="@string/profile.info.github"/>
            </android.support.design.widget.TextInputLayout>

            <ImageView
                style="@style/main_icon.right"
                android:src="@drawable/ic_visibility_black_24dp"/>
        </LinearLayout>

        <View style="@style/line.horizontal.main"/>

        <LinearLayout style="@style/main_item_layout">

            <ImageView
                style="@style/main_icon.left"
                android:src="@drawable/ic_account_circle"/>

            <android.support.design.widget.TextInputLayout
                style="@style/main_text_input_layout">

                <EditText
                    style="@style/main_edit_text"
                    android:id="@+id/about_edit_text"
                    android:inputType="textMultiLine"
                    android:hint="@string/profile.info.about"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>