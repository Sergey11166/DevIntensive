<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_parent_only"
    android:id="@+id/drawer_layout"
    tools:context=".ui.activities.MainActivity"
    tools:ignore="contentDescription">

    <android.support.design.widget.CoordinatorLayout
        style="@style/match_parent_only"
        android:id="@+id/coordinator_container">
        
        <android.support.design.widget.AppBarLayout
            style="@style/appbar_layout"
            android:id="@+id/appbar_layout"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                style="@style/match_parent_only"
                android:id="@+id/collapsing_toolbar_layout"
                app:contentScrim="@color/color_primary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    style="@style/user_photo"
                    android:id="@+id/user_photo"
                    app:layout_collapseMode="parallax"/>

                <android.support.v7.widget.Toolbar
                    style="@style/toolbar"
                    android:id="@+id/toolbar"
                    app:layout_collapseMode="pin"
                    app:contentInsetStartWithNavigation="0dp"/>

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                style="@style/match_parent_only"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@color/gray">

                    <LinearLayout
                        style="@style/header_layout"
                        android:layout_weight="1">

                        <TextView
                            style="@style/header_text.number"
                            android:text="5"/>

                        <TextView
                            style="@style/header_text"
                            android:text="@string/rating"/>
                    </LinearLayout>

                    <View style="@style/line.vertical.main_header"/>

                    <LinearLayout
                        style="@style/header_layout"
                        android:layout_weight="2">

                        <TextView
                            style="@style/header_text.number"
                            android:text="25000"/>

                        <TextView
                            style="@style/header_text"
                            android:text="@string/wrote_code_lines"/>
                    </LinearLayout>

                    <View style="@style/line.vertical.main_header"/>

                    <LinearLayout
                        style="@style/header_layout"
                        android:layout_weight="1">

                        <TextView
                            style="@style/header_text.number"
                            android:text="5"/>

                        <TextView
                            style="@style/header_text"
                            android:text="@string/projects"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout style="@style/main_item_layout">

                    <ImageView
                        style="@style/main_icon.left"
                        android:src="@drawable/ic_call_black_24dp"/>

                    <android.support.design.widget.TextInputLayout
                        style="@style/main_text_input_layout">

                        <EditText
                            style="@style/main_edit_text"
                            android:id="@+id/phone_edit_text"
                            android:inputType="phone"
                            android:hint="@string/phone"
                            android:text="+79090909090"/>

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        style="@style/main_icon.right"
                        android:src="@drawable/ic_phone_in_talk_black_24dp"/>
                </LinearLayout>

                <View style="@style/line.horizontal.main"/>

                <LinearLayout style="@style/main_item_layout">

                    <ImageView
                        style="@style/main_icon.left"
                        android:src="@drawable/ic_email_black_24dp"
                        android:id="@+id/imageView"
                        android:layout_height="wrap_content"/>

                    <android.support.design.widget.TextInputLayout
                        style="@style/main_text_input_layout">

                        <EditText
                            style="@style/main_edit_text"
                            android:id="@+id/email_edit_text"
                            android:inputType="textEmailAddress"
                            android:hint="@string/email"
                            android:text="@string/sevoro_sv_gmail_com"/>

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        style="@style/main_icon.right"
                        android:src="@drawable/ic_send_black_24dp"/>
                </LinearLayout>

                <View style="@style/line.horizontal.main"/>

                <LinearLayout style="@style/main_item_layout">

                    <ImageView
                        style="@style/main_icon.left"
                        android:src="@drawable/ic_vk_circle"/>

                    <android.support.design.widget.TextInputLayout
                        style="@style/main_text_input_layout">

                        <EditText
                            style="@style/main_edit_text"
                            android:id="@+id/vk_edit_text"
                            android:inputType="textUri|textMultiLine"
                            android:hint="@string/vk_profile"
                            android:text="vk.com/sergey11166"/>

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        style="@style/main_icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>
                </LinearLayout>

                <View style="@style/line.horizontal.main"/>

                <LinearLayout style="@style/main_item_layout">

                    <ImageView
                        style="@style/main_icon.left"
                        android:src="@drawable/ic_github_circle"/>

                    <android.support.design.widget.TextInputLayout
                        style="@style/main_text_input_layout">

                        <EditText
                            style="@style/main_edit_text"
                            android:id="@+id/git_edit_text"
                            android:inputType="textMultiLine"
                            android:hint="@string/repository"
                            android:text="github.com/sergey11166/DevIntensive"/>

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        style="@style/main_icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>
                </LinearLayout>

                <View style="@style/line.horizontal.main"/>

                <LinearLayout style="@style/main_item_layout">

                    <ImageView
                        style="@style/main_icon.left"
                        android:src="@drawable/ic_account_circle"/>

                    <android.support.design.widget.TextInputLayout
                        style="@style/main_text_input_layout">

                        <EditText
                            style="@style/main_edit_text"
                            android:id="@+id/bio_edit_text"
                            android:inputType="textMultiLine"
                            android:hint="@string/about_me"
                            android:text="@string/lorem_ipsum"/>

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:layout_marginEnd="@dimen/fab_right_space"
            app:layout_anchor="@id/appbar_layout"
            app:layout_anchorGravity="bottom|right"/>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        style="@style/navigation_view"
        android:id="@+id/navigation_view"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>