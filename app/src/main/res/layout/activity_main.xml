<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_parent_only"
    android:id="@+id/drawer_layout"
    tools:context=".ui.activities.MainActivity"
    tools:ignore="contentDescription">

    <android.support.design.widget.CoordinatorLayout
        style="@style/match_parent_only"
        android:id="@+id/coordinator_container">
        
        <android.support.design.widget.AppBarLayout
            style="@style/appbar_layout"
            android:id="@+id/appbar_layout"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                style="@style/match_parent_only"
                android:id="@+id/collapsing_toolbar_layout"
                app:contentScrim="@color/color_primary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_image_size"
                    android:fitsSystemWindows="true">

                    <ImageView
                        android:id="@+id/user_photo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/profile_image_size"
                        android:scaleType="centerCrop"/>

                    <RelativeLayout
                        android:id="@+id/placeholder_layout"
                        style="@style/match_parent_only"
                        android:background="@color/color_gray_background"
                        android:visibility="gone">

                        <TextView
                            style="@style/wrap_content_only"
                            android:text="@string/change_profile_photo"
                            android:textColor="@android:color/white"
                            android:fontFamily="sans-serif-medium"
                            android:layout_centerHorizontal="true"
                            android:layout_above="@+id/photo_placeholder"
                            android:layout_marginBottom="@dimen/spacing_small_8"/>

                        <ImageView
                            android:id="@+id/photo_placeholder"
                            android:layout_width="@dimen/placeholder_photo_size_90"
                            android:layout_height="@dimen/placeholder_photo_size_90"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_add_a_photo_white_24px"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/spacing_large_56"/>

                    </RelativeLayout>
                </FrameLayout>

                <android.support.v7.widget.Toolbar
                    style="@style/toolbar"
                    android:id="@+id/toolbar"
                    app:layout_collapseMode="pin"
                    app:contentInsetStartWithNavigation="0dp"/>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <include layout="@layout/content_main_header"/>

        <include layout="@layout/content_main_info"/>

        <android.support.design.widget.FloatingActionButton
            style="@style/wrap_content_only.fab"
            android:id="@+id/fab"
            android:src="@drawable/ic_mode_edit_black_24dp"
            app:layout_anchor="@id/appbar_layout"
            app:layout_anchorGravity="bottom|right"/>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        style="@style/navigation_view"
        android:id="@+id/navigation_view"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>