<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       style="@style/match_parent_all"
       tools:ignore="contentDescription">

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_profile_photo_256"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        style="@style/match_parent_all"
        android:id="@+id/profile_placeholder_layout"
        android:background="@color/color_gray_background"
        android:visibility="gone">

        <TextView
            style="@style/wrap_content_all.profile_placeholder_text"
            android:layout_above="@+id/profile_placeholder_image"
            android:text="@string/profile.placeholder"/>

        <ImageView
            style="@style/profile_placeholder_image"
            android:id="@+id/profile_placeholder_image"
            android:src="@drawable/ic_add_a_photo_white_24px"/>
    </RelativeLayout>
</merge>