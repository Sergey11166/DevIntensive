<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_huge_112"
    android:background="@color/gray"
    app:layout_behavior=".ui.view.behaviors.MainHeaderBehavior"
    tools:ignore="Overdraw">

    <LinearLayout
        style="@style/header_layout"
        android:layout_weight="1">

        <TextView
            style="@style/header_text.number"
            android:text="5"/>

        <TextView
            style="@style/header_text"
            android:text="@string/rating"/>
    </LinearLayout>

    <View style="@style/line.vertical.main_header"/>

    <LinearLayout
        style="@style/header_layout"
        android:layout_weight="2">

        <TextView
            style="@style/header_text.number"
            android:text="25000"/>

        <TextView
            style="@style/header_text"
            android:text="@string/wrote_code_lines"/>
    </LinearLayout>

    <View style="@style/line.vertical.main_header"/>

    <LinearLayout
        style="@style/header_layout"
        android:layout_weight="1">

        <TextView
            style="@style/header_text.number"
            android:text="5"/>

        <TextView
            style="@style/header_text"
            android:text="@string/projects"/>
    </LinearLayout>
</LinearLayout>