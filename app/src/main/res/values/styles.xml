<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@android:color/transparent</item>
        <item name="actionModeCloseDrawable">@android:color/transparent</item>
        <item name="actionModeCloseButtonStyle">@style/Widget.AppCompat.ActionMode</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="match_parent_all">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_content_all">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="line">
        <item name="android:background">@color/color_gray_light</item>
    </style>

    <style name="line.horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_line_thickness</item>
    </style>

    <style name="line.vertical">
        <item name="android:layout_width">@dimen/size_line_thickness</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="custom_progress">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="wrap_content_all.fab">
        <item name="android:layout_marginEnd">@dimen/fab_right_space</item>
    </style>
</resources>
