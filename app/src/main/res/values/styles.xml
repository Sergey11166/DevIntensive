<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="header_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="header_text.number">
        <item name="android:textSize">@dimen/size_small_24</item>
    </style>

    <style name="line">
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="line.horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_line_thickness</item>
        <item name="android:layout_marginLeft">@dimen/spacing_largest_72</item>
    </style>

    <style name="line.vertical">
        <item name="android:layout_width">@dimen/size_line_thickness</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/size_small_24</item>
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
    </style>
</resources>
