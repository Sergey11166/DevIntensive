<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="wrap_content_all.profile_placeholder_text">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/space_small_8</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_medium_20</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">8</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowRadius">20</item>
    </style>

    <style name="profile_placeholder_image">
        <item name="android:layout_width">@dimen/size_placeholder_icon_90</item>
        <item name="android:layout_height">@dimen/size_placeholder_icon_90</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginBottom">@dimen/space_large_56</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
</resources>