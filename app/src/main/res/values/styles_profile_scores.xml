<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="header_text.number">
        <item name="android:textSize">@dimen/size_small_24</item>
    </style>

    <style name="line.vertical.main_header">
        <item name="android:layout_height">@dimen/size_medium_56</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>