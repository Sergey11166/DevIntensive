<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="main_icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
    </style>

    <style name="main_icon.left">
        <item name="android:layout_marginStart">@dimen/spacing_normal_16</item>
    </style>

    <style name="main_icon.right">
        <item name="android:layout_marginEnd">@dimen/spacing_medium_32</item>
    </style>

    <style name="main_text_input_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
    </style>

    <style name="main_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginStart">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginEnd">@dimen/spacing_medial_24</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="line.horizontal.main">
        <item name="android:layout_marginLeft">@dimen/spacing_largest_72</item>
    </style>

</resources>